@model IEnumerable<ProjectReferencesDemo.Services.Models.Customer>

@{
    ViewData["Title"] = "Ügyfelek";
}

<a class="btn btn-success mb-4" asp-action="Create" asp-controller="Home">
    Új ügyfél felvétele
</a>

<table class="table table-hover">

    <tr>
        <th>Név</th>
        <th>Belépés időpontja</th>
        <th>Kor</th>
        <th>Nem</th>
    </tr>

    @if (Model != null && Model.Count() > 0)
    {
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.DateOfRegistration.ToString("yyyy. MMMM dd. HH:mm")</td>
                <td>@customer.Age</td>
                <td>@(customer.Gender ? "Férfi" : "Nő")</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td class="text-center" colspan="4">Nincs megjeleníthető ügyfél!</td>
        </tr>
    }

</table>
